apply_pattern package_linkopts

#--------------------------------------------
private

macro tip_cppflags  ""\
  Linux "-I ../src -g "\
  WIN32 " /I ..\src /wd4305"

macro source *.cxx WIN32 "*.h *.cxx ../tip/*.h"
library tip -no_share $(source)

application test_tip test/*.cxx
